[Unit]
Description=SwayNC Notifications
PartOf=graphical-session.target
After=graphical-session.target
Requisite=graphical-session.target

[Service]
ExecStart=/usr/bin/swaync -c "%h/.config/niri/swaync/config.json" -s "%h/.config/niri/swaync/style.css"
ExecReload=/usr/bin/swaync-client -rs
Restart=on-failure

[Install]
WantedBy=niri.service
